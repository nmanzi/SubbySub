<div class="page-header"><h1>current subdomains <small>@ hadric.us</small></h1></div>

<table class="links">
  <tr>
    <th>Subdomain</th>
    <th>URL</th>
    <th>Actions</th>
  </tr>

<% @links.each do |link| %>
  <tr>
	  <td><%= link.subdomain %><span class="sublabel">.hadric.us</span></td>
    <td><a href="<%= link.url %>"><%= link.url %></a></td>
    <td>
			<%= link_to 'Edit', edit_link_path(link), :class => "label" %>
			<a href="#" data-controls-modal="modal-<%= link.id %>" data-keyboard="true" class="label important">Destroy</a>
			<div id="modal-<%= link.id %>" class="modal hide fade">
				<div class="modal-header">
          <a href="#" class="close">&times;</a>
          <h3>Are you sure?</h3>
        </div>
        <div class="modal-body">
          <p>Really destroy subdomain <strong><%= link.subdomain %>.hadric.us</strong>?</p>
        </div>
        <div class="modal-footer">
          <%= link_to 'Destroy', link, method: :delete, :class => "btn danger" %>
          <a href="#" class="btn secondary" data-controls-modal="modal-<%= link.id %>">Cancel</a>
        </div>
			</div>
		</td>
  </tr>
<% end %>
</table>

<div style="text-align: right;">
	<%= link_to 'New Link', new_link_path, :class => "btn primary" %>
</div>