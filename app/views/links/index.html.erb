<div class="page-header"><h1>current subdomains <small><%= Link.total_visits %> requests served.</small></h1></div>

<table class="links">
  <tr>
    <th>Subdomain</th>
    <th>URL</th>
		<% if is_authed? %>
			<th>Visits</th>
	    <th>Actions</th>
		<% end %>
  </tr>

<% @links.each do |link| %>
  <tr>
	  <td><%= link.subdomain %><span class="sublabel">.<%= APP_CONFIG['parent_domain'] %></span></td>
    <td><a href="<%= link.url %>"><%= link.url %></a></td>
		<% if is_authed? %>
			<td><%= link.visits %></td>
	    <td>
				<%= link_to 'Edit', edit_link_path(link), :class => "label" %>
				<%= render :partial => 'destroy', :locals => { :link => link } %>
			</td>
		<% end %>
  </tr>
<% end %>
</table>

<% if is_authed? %>
	<div style="text-align: right;">
	<%= link_to 'New Link', new_link_path, :class => "btn primary" %>
	</div>
<% end %>